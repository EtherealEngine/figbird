{
  "name": "figbird",
  "version": "0.1.0",
  "description": "Declarative and realtime data management for Feathers and React",
  "main": "dist/cjs",
  "module": "dist/esm",
  "scripts": {
    "test": "healthier && prettier --check '**/*.{js,css,yml}' && nyc ava",
    "build": "node ./tasks/build.js",
    "watch": "node ./tasks/build.js -w",
    "version": "npm run build",
    "release": "np",
    "release:beta": "np --tag=beta",
    "release:docs": "hugo -s docs && gh-pages -d docs/public"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@feathersjs/adapter-commons": "^4.3.1",
    "sift": "^8.5.0",
    "tiny-atom": "^5.0.0-pre.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.0",
    "ava": "^2.3.0",
    "babel-eslint": "^10.0.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "execa": "^2.0.4",
    "gh-pages": "^2.1.1",
    "healthier": "^3.2.0",
    "jsdom": "^15.1.1",
    "np": "^5.0.3",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "sideEffects": false,
  "healthier": {
    "parser": "babel-eslint",
    "ignore": [
      "docs/static/*.min*"
    ]
  },
  "ava": {
    "serial": true,
    "files": [
      "test/*.test.js"
    ],
    "require": [
      "@babel/register",
      "./test/setup.js"
    ]
  },
  "np": {
    "releaseDraft": false
  }
}
