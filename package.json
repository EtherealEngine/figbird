{
  "name": "figbird",
  "version": "0.9.0",
  "description": "Effortless realtime data management for React + Feathers applications.",
  "main": "dist/cjs",
  "module": "dist/esm",
  "scripts": {
    "test": "healthier && prettier --check '**/*.{js,css,yml}' && nyc ava",
    "format": "prettier --write '**/*.{js,css,yml}'",
    "coverage": "nyc --reporter=html ava",
    "build": "node ./tasks/build.js",
    "watch": "node ./tasks/build.js -w",
    "version": "npm run build",
    "release": "np",
    "release:beta": "np --tag=beta",
    "release:docs": "hugo -s docs && gh-pages -d docs/public"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "sift": "^13.2.0",
    "tiny-atom": "^5.0.0-pre.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/register": "^7.10.5",
    "ava": "^3.11.0",
    "babel-eslint": "^10.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "execa": "^4.0.3",
    "gh-pages": "^3.1.0",
    "healthier": "^4.0.0",
    "jsdom": "^16.3.0",
    "np": "^6.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "sideEffects": false,
  "healthier": {
    "parser": "babel-eslint",
    "ignore": [
      "docs/static/*.min*"
    ]
  },
  "ava": {
    "serial": true,
    "files": [
      "test/*.test.js"
    ],
    "require": [
      "@babel/register",
      "./test/setup.js"
    ],
    "timeout": "30s"
  },
  "np": {
    "releaseDraft": false
  }
}
