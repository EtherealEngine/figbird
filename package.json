{
  "name": "figbird",
  "version": "0.11.1",
  "description": "Effortless realtime data management for React + Feathers applications.",
  "main": "dist/cjs",
  "module": "dist/esm",
  "scripts": {
    "test": "healthier && prettier --check '**/*.{js,css,yml}' && nyc ava",
    "format": "prettier --write '**/*.{js,css,yml}'",
    "coverage": "nyc --reporter=html ava",
    "build": "node ./tasks/build.js",
    "watch": "node ./tasks/build.js -w",
    "version": "npm run build",
    "release": "np",
    "release:beta": "np --tag=beta",
    "release:docs": "hugo -s docs && gh-pages -d docs/public"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "sift": "^17.0.1",
    "tiny-atom": "^5.0.0-pre.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/plugin-transform-react-jsx": "^7.21.0",
    "@babel/preset-env": "^7.21.4",
    "@babel/register": "^7.21.0",
    "ava": "^5.2.0",
    "execa": "^7.1.1",
    "gh-pages": "^5.0.0",
    "healthier": "^6.3.0",
    "jsdom": "^21.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "sideEffects": false,
  "healthier": {
    "parser": "@babel/eslint-parser",
    "ignore": [
      "docs/static/*.min*"
    ]
  },
  "ava": {
    "serial": true,
    "files": [
      "test/*.test.js"
    ],
    "require": [
      "@babel/register",
      "./test/setup.js"
    ]
  },
  "np": {
    "releaseDraft": false
  }
}
